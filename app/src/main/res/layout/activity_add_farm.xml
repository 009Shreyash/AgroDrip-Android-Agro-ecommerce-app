<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/parentRelative"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    tools:context=".activity.farm.AddFarmActivity">    <include        android:id="@+id/appbar"        layout="@layout/app_bar_main" />    <ScrollView        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@id/btnSave"        android:layout_below="@id/appbar"        android:fillViewport="true">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:gravity="center|top"            android:orientation="vertical">            <androidx.appcompat.widget.AppCompatImageView                android:layout_width="@dimen/_150sdp"                android:layout_height="@dimen/_150sdp"                android:layout_marginTop="@dimen/_20sdp"                app:srcCompat="@drawable/ic_farm" />            <com.google.android.material.textfield.TextInputLayout                android:id="@+id/textInputFieldName"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="@dimen/_20sdp"                android:layout_marginTop="@dimen/_15sdp"                android:layout_marginEnd="@dimen/_20sdp"                android:backgroundTint="@color/colorPrimary"                android:hint="@string/edt_field_name"                android:padding="@dimen/_5sdp">                <com.google.android.material.textfield.TextInputEditText                    android:id="@+id/edtFieldName"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:imeOptions="actionNext"                    android:inputType="textCapWords"                    android:maxLines="1"                    android:textAllCaps="false"                    android:textColor="@color/colorPrimary"                    android:textSize="@dimen/_12sdp"                    android:backgroundTint="@color/colorPrimary"                    android:textStyle="bold" />            </com.google.android.material.textfield.TextInputLayout>            <com.google.android.material.textfield.TextInputLayout                android:id="@+id/textInputChooesCrop"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="@dimen/_20sdp"                android:layout_marginTop="@dimen/_5sdp"                android:layout_marginEnd="@dimen/_20sdp"                android:backgroundTint="@color/colorPrimary"                android:hint="@string/edt_choose_crop"                android:padding="@dimen/_5sdp">                <com.google.android.material.textfield.TextInputEditText                    android:id="@+id/edtChooesCrop"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:clickable="true"                    android:focusable="false"                    android:textAllCaps="false"                    android:textColor="@color/colorPrimary"                    android:textSize="@dimen/_12sdp"                    android:backgroundTint="@color/colorPrimary"                    android:textStyle="bold" />            </com.google.android.material.textfield.TextInputLayout>            <com.google.android.material.textfield.TextInputLayout                android:id="@+id/textInputSowingDate"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="@dimen/_20sdp"                android:layout_marginTop="@dimen/_5sdp"                android:layout_marginEnd="@dimen/_20sdp"                android:backgroundTint="@color/colorPrimary"                android:hint="@string/edt_sowing_date"                android:imeOptions="actionNext"                android:padding="@dimen/_5sdp">                <com.google.android.material.textfield.TextInputEditText                    android:id="@+id/edtSowingDate"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:clickable="true"                    android:focusable="false"                    android:textAllCaps="false"                    android:textSize="@dimen/_12sdp"                    android:textColor="@color/colorPrimary"                    android:backgroundTint="@color/colorPrimary"                    android:textStyle="bold" />            </com.google.android.material.textfield.TextInputLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginStart="@dimen/_20sdp"                android:layout_marginTop="@dimen/_5sdp"                android:layout_marginEnd="@dimen/_20sdp"                android:gravity="center"                android:orientation="horizontal">                <com.google.android.material.textfield.TextInputLayout                    android:id="@+id/textInputArea"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:backgroundTint="@color/colorPrimary"                    android:hint="@string/edt_area"                    android:padding="@dimen/_5sdp">                    <com.google.android.material.textfield.TextInputEditText                        android:id="@+id/edtArea"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:imeOptions="actionDone"                        android:inputType="number"                        android:maxLines="1"                        android:textAllCaps="false"                        android:textColor="@color/colorPrimary"                        android:textSize="@dimen/_12sdp"                        android:backgroundTint="@color/colorPrimary"                        android:textStyle="bold" />                </com.google.android.material.textfield.TextInputLayout>                <androidx.appcompat.widget.AppCompatSpinner                    android:id="@+id/spinnerUnit"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:background="@drawable/lightgray_border"                    android:backgroundTint="@color/colorPrimary"                    android:dropDownVerticalOffset="@dimen/_40sdp"                    android:padding="@dimen/_7sdp"                    android:spinnerMode="dropdown"                    android:textAlignment="center" />            </LinearLayout>        </LinearLayout>    </ScrollView>    <Button        android:id="@+id/btnSave"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@color/colorPrimary"        android:gravity="center"        android:padding="@dimen/_10sdp"        android:text="@string/btn_save"        android:textColor="@color/white"        android:textSize="@dimen/_12sdp"        android:textStyle="bold" /></RelativeLayout>